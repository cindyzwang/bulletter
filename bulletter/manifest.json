{
  "manifest_version": 2,

  "name": "Bulletter",
  "description": "This extension turns your highlighted text into bullet points on a word document",
  "version": "0.0.0.2",

  "browser_action": {
    "default_icon": "docs/icon16.png",
    "default_popup": "options.html",
    "default_title": "Bulletter"
  },
  "icons": {
    "16": "docs/icon16.png",
    "48": "docs/icon48.png",
    "128": "docs/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["highlight.js"]
  }]
}
